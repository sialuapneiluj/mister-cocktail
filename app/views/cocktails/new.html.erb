<div class="row">
	<div class="col-xs-12 col-sm-offset-4 col-sm-4">
		<h2>Add a cocktail</h2>
		<%= simple_form_for [@cocktail] do |f| %>
		  <%= f.input :name %>
		  <%= f.submit "add a cocktail", class: "btn btn-primary" %>
		  <% end %>
		<div class="alert_warning">
			<p><%= @errors %></p>
		</div>
	</div>
</div>


