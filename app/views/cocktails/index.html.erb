<h1>Mister Cocktail</h1>

<div class="row">
	<% @cocktails.each do |cocktail| %>
	<div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-category">
            	<%= cocktail.name %>
            </div>
            <div class="card-description">
                <% ingredients_number = cocktail.ingredients.length %>
               
                <p><%= ingredients_number %> <%= "ingredient".pluralize(ingredients_number) %></p>
            </div>
            <%= link_to "", cocktail_path(cocktail), {class: 'card-link'} %>
          </div>
        </div>
	<% end %>
</div>